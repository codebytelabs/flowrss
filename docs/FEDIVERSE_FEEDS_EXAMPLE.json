  "notes": {
    "mastodon_patterns": {
      "user_feed": "https://{instance}/@{username}.rss",
      "hashtag_feed": "https://{instance}/tags/{tag}.rss",
      "examples": [
        "https://mastodon.social/@Gargron.rss",
        "https://fosstodon.org/@mozilla.rss",
        "https://mastodon.social/tags/opensource.rss"
      ]
    },
    "lemmy_patterns": {
      "community": "https://openrss.org/{instance}/c/{community}",
      "user": "https://openrss.org/{instance}/u/{username}",
      "timeline_local": "https://openrss.org/{instance}/local",
      "timeline_all": "https://openrss.org/{instance}/all",
      "sorting": "Add /hot, /active, or /new for sorting",
      "examples": [
        "https://openrss.org/lemmy.ml/c/linux",
        "https://openrss.org/programming.dev/c/programming",
        "https://openrss.org/lemmy.world/all/hot"
      ],
      "note": "Lemmy doesn't have native RSS, so we use OpenRSS.org as a proxy"
    },
    "peertube_patterns": {
      "channel": "https://{instance}/feeds/videos.xml?videoChannelId={id}",
      "account": "https://{instance}/feeds/videos.xml?accountId={id}",
      "examples": [
        "https://framatube.org/feeds/videos.xml?videoChannelId=3"
      ]
    },
    "implementation_notes": [
      "All these feeds work with standard RSS parsers",
      "No special code needed - just add to curated packs",
      "Mastodon and PeerTube have native RSS support",
      "Lemmy requires OpenRSS.org proxy (third-party service)",
      "Consider adding a 'Fediverse' category in the UI",
      "Could add a helper UI to convert Lemmy URLs to OpenRSS format"
    ]
  }
